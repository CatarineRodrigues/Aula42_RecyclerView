<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCardHeroi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margem_16">

        <ImageView
            android:id="@+id/rvImagemCard"
            android:layout_width="@dimen/tamanho_50"
            android:layout_height="@dimen/tamanho_50"
            android:layout_margin="@dimen/margem_16"
            android:src="@drawable/img_marvel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rvNomeHeroi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rvNomeHeroi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margem_16"
            android:text="@string/nome_heroi"
            android:textSize="@dimen/fonte_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/rvImagemCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rvImagemCard"
            app:layout_constraintTop_toTopOf="@id/rvImagemCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>