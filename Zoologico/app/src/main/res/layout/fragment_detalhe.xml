<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margem_16"
    tools:context=".fragments.DetalheFragment">

    <ImageView
        android:id="@+id/imgAnimal"
        android:layout_width="@dimen/size_86"
        android:layout_height="@dimen/size_86"
        android:layout_margin="@dimen/margem_16"
        android:contentDescription="@string/descricao_imagem"
        android:src="@drawable/animal"
        app:layout_constraintBottom_toTopOf="@id/tvDescricao"
        app:layout_constraintEnd_toStartOf="@id/tvNomeAnimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNomeAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Animal"
        android:textSize="@dimen/font_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgAnimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgAnimal"
        app:layout_constraintTop_toTopOf="@id/imgAnimal" />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margem_16"
        android:layout_marginTop="@dimen/margem_16"
        android:layout_marginRight="@dimen/margem_16"
        android:text="Aqui será a descrição do animal"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/tvNomeAnimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAnimal" />

</androidx.constraintlayout.widget.ConstraintLayout>